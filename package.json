        "express": "^4.0.0",
        "guid-typescript": "^1.0.9",
        "helmet": "^3.21.2",
        "pg": "^7.17.0",
        "pg-promise": "^10.3.5",
        "pm2": "^4.2.1",
        "reflect-metadata": "^0.1.13",
        "sql-template-strings": "^2.2.2",
        "swagger-ui-express": "^4.1.2",
